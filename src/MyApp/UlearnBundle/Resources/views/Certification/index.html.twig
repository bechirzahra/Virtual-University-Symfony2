{%block Erasebody%}
     
    <h1>Liste Certifications</h1>
   
    <table class="records_list">
        <thead>
            <tr>
                <th>Id Certification</th>
                <th>Duree</th>
                <th>Date de Passage</th>
                <th>Nom Certification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('CERT_show', { 'id': entity.idcertification }) }}">{{ entity.idcertification }}</a></td>
                <td>{{ entity.duree }}</td>
                <td>{% if entity.datepassage %}{{ entity.datepassage|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nomcertif }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('CERT_show', { 'id': entity.idcertification }) }}">Afficher</a>
                    </li>
                    <li>
                        <a href="{{ path('CERT_edit', { 'id': entity.idcertification }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

